<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
	xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
	xmlns:nt="http://www.jcp.org/jcr/nt/1.0" jcr:primaryType="nt:unstructured"
	jcr:title="Carousel" sling:resourceType="cq/gui/components/authoring/dialog"
	mode="edit">
	<content jcr:primaryType="nt:unstructured"
		sling:resourceType="granite/ui/components/foundation/container">
		<items jcr:primaryType="nt:unstructured">
			<tabs jcr:primaryType="nt:unstructured"
				sling:resourceType="granite/ui/components/foundation/container">
				<layout jcr:primaryType="nt:unstructured"
					sling:resourceType="granite/ui/components/foundation/layouts/tabs"
					type="nav" />
				<items jcr:primaryType="nt:unstructured">
					<content jcr:primaryType="nt:unstructured" jcr:title="Content"
						sling:resourceType="granite/ui/components/foundation/section">
						<items jcr:primaryType="nt:unstructured">
							<heading jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/foundation/form/textfield"
								fieldDescription="Limit to 30 characters, including spaces"
								fieldLabel="Heading" name="./heading" required="{Boolean}false" />
							<subhead jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/foundation/form/textarea"
								fieldDescription="Limit to 100 characters, including spaces"
								fieldLabel="Subhead" name="./subheading" required="{Boolean}false" />
							<ctaLabel jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/foundation/form/textfield"
								fieldDescription="Limit to 15 characters, including spaces"
								fieldLabel="CTA" name="./ctaLabel" required="{Boolean}false" />
							<ctaLinkUrl jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
								fieldDescription="Select link url" fieldLabel="CTA Link" name="./ctaLinkUrl"
								required="{Boolean}false" rootPath="/content" />
							<youtube jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/foundation/form/textfield"
								fieldDescription="youtube video id"
								fieldLabel="Youtube Video ID" name="./youtube" required="{Boolean}false" />
							<heroImage jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/foundation/form/fileupload"
								autoStart="{Boolean}false" class="cq-droptarget" fieldLabel="Image"
								fileNameParameter="./heroImage/fileName" fileReferenceParameter="./heroImage/fileReference"
								mimeTypes="[image]" multiple="{Boolean}false" name="./heroImage/file"
								title="Drop an image" uploadUrl="${suffix.path}" useHTML5="{Boolean}true" required="{Boolean}true"
								fieldDescription="Image dimensions for Large screen = 2400 X 900" />
							<heroImageAlt jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/foundation/form/textfield"
								fieldLabel="Image Alt Text" name="./heroImageAlt" required="{Boolean}true" />
							<heroImageSmall jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/foundation/form/fileupload"
								autoStart="{Boolean}false" class="cq-droptarget" fieldLabel="Image: Small Screen"
								fileNameParameter="./heroImageSmall/fileName"
								fileReferenceParameter="./heroImageSmall/fileReference"
								uploadUrl="${suffix.path}" allowUpload="{Boolean}false"
								mimeTypes="[image]" multiple="{Boolean}false" name="./heroImageSmall/file"
								title="Drop an image" useHTML5="{Boolean}true" required="{Boolean}false"
								fieldDescription="Image dimensions for Small screen = 1152 x 320" />
						</items>
					</content>

					<options jcr:primaryType="nt:unstructured" jcr:title="Options"
						sling:resourceType="granite/ui/components/foundation/section">
						<items jcr:primaryType="nt:unstructured">
							<column jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/foundation/container">
								<items jcr:primaryType="nt:unstructured">
									<xPosition jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/foundation/form/numberfield"
										fieldDescription="X-Position"
										fieldLabel="X-Position (%)" name="./xPosition" required="{Boolean}false" />
									<yPosition jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/foundation/form/numberfield"
										fieldDescription="Y-Position"
										fieldLabel="Y-Position (%)" name="./yPosition" required="{Boolean}false" />
									<textColor jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/foundation/form/select"
										fieldLabel="Text Color" name="./textColor">
										<items jcr:primaryType="nt:unstructured">
											<light jcr:primaryType="nt:unstructured" text="Light"
												value="light" />
											<dark jcr:primaryType="nt:unstructured" text="Dark"
												value="dark" selected="{Boolean}true" />
										</items>
									</textColor>
									<imageBorder jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/foundation/form/select"
										fieldLabel="Image Border" name="./imageBorder">
										<items jcr:primaryType="nt:unstructured">
											<yes jcr:primaryType="nt:unstructured" text="Yes"
												value="yes" />
											<no jcr:primaryType="nt:unstructured" text="No"
												value="no" selected="{Boolean}true" />
										</items>
									</imageBorder>
									<carouselBorderColor jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/foundation/form/select"
										fieldLabel="Background Color" name="./carouselBorderColor">
										<items jcr:primaryType="nt:unstructured">
											<black jcr:primaryType="nt:unstructured" text="Black"
												value="black" />
											<white jcr:primaryType="nt:unstructured" text="White"
												value="white" selected="{Boolean}true" />
										</items>
									</carouselBorderColor>
									<autoRotateInterval jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/foundation/form/numberfield"
										fieldDescription="Auto Rotate Interval (seconds)"
										fieldLabel="Auto Rotate Interval (seconds)" name="./autoRotateInterval"
										value="0" required="{Boolean}false" />
									<textBlockWidth jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/foundation/form/numberfield"
										fieldDescription="Text Block Width"
										fieldLabel="Text Block width" name="./textBlockWidth"
										value="50" min="30" max="100" required="{Boolean}false" />
									<carouselOrder jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/foundation/form/numberfield"
										fieldDescription="Carousel Order"
										fieldLabel="Carousel Order" name="./carouselOrder"
										value="1" min="1" max="10" required="{Boolean}false" />
									<carouselHide
		                                jcr:primaryType="nt:unstructured"
		                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
		                                class="cq-dialog-checkbox-showhide"
		                                cq-dialog-checkbox-showhide-target=".button-option-enable-showhide-target"
		                                fieldDescription="Carousel Hide"
		                                name="./carouselHide"
		                                text="Carousel Hide"
		                                value="true"/>
								</items>
							</column>
						</items>
					</options>
				</items>
			</tabs>
		</items>
	</content>
</jcr:root>
