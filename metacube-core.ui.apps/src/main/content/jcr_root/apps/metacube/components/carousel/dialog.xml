<?xml version="1.0" encoding="UTF-8"?>
 <jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
     jcr:primaryType="cq:Dialog"
     height="{Long}500"
     title="Carousel"
     width="{Long}500"
     xtype="dialog">
     <items
         jcr:primaryType="cq:Widget"
         xtype="tabpanel">
         <items jcr:primaryType="cq:WidgetCollection">
             <tab1
                 jcr:primaryType="cq:Panel"
                 title="Content">
                 <items jcr:primaryType="cq:WidgetCollection">

					<heading jcr:primaryType="cq:Widget" allowBlank="true"
						fieldDescription="Limit to 30 characters, including spaces"
						fieldLabel="Heading" name="./heading" xtype="textfield" />

					<subhead jcr:primaryType="cq:Widget" allowBlank="true"
						fieldDescription="Limit to 100 characters, including spaces"
						fieldLabel="Subhead" name="./subheading" xtype="textarea" />

					<ctaLabel jcr:primaryType="cq:Widget" allowBlank="true"
						fieldDescription="Limit to 15 characters, including spaces"
						fieldLabel="CTA" name="./ctaLabel" xtype="textfield" />

					<ctaLinkUrl jcr:primaryType="cq:Widget" allowBlank="true"
						fieldDescription="Link URL" rootPath="/content"
						fieldLabel="CTA Link" name="./ctaLinkUrl" xtype="pathfield" />

 					<heroimage jcr:primaryType="cq:Widget" collapsed="{Boolean}false"
						collapsible="{Boolean}false" title="Image" xtype="dialogfieldset">
						<items jcr:primaryType="cq:WidgetCollection">
							<image jcr:primaryType="cq:Widget" allowBlank="{Boolean}false"
								allowUpload="{Boolean}false" ddGroups="[media]"
								fieldDescription="Image dimensions: 2400 x 900" fieldLabel="Image"
								fileNameParameter="./heroImage/fileName" fileReferenceParameter="./heroImage/fileReference"
								height="{Long}250" name="./heroImage/file" xtype="html5smartimage" />
						</items>
					</heroimage>
					<heroimageAlt jcr:primaryType="cq:Widget" allowBlank="false"
						fieldLabel="Image Alt Text" name="./heroImageAlt" xtype="textfield" />
                </items>
             </tab1>
         </items>
     </items>
 </jcr:root>
